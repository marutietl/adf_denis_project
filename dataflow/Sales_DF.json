{
	"name": "Sales_DF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Sales_B",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Sales_S",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "derivedColumn2"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          fSalesPrimaryKey as integer,",
				"          ProductID as short,",
				"          SalesRepID as short,",
				"          Location as string,",
				"          Date as string,",
				"          Units as short,",
				"          PercentOfStandardCost as double,",
				"          RevenueDiscount as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(country = split(Location, ';')[1],",
				"          state = split(Location,';')[2]) ~> derivedColumn1",
				"derivedColumn1 derive(Date = toString(toDate(Date,'d.m.yyyy'),'dd-mm-yyyy')) ~> derivedColumn2",
				"derivedColumn2 select(mapColumn(",
				"          fSalesPrimaryKey,",
				"          ProductID,",
				"          SalesRepID,",
				"          Date,",
				"          Units,",
				"          PercentOfStandardCost,",
				"          RevenueDiscount,",
				"          country,",
				"          state",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     filePattern:'sales_s.csv',",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}